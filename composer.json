{
    "name": "messagere/messagere",
    "license": "MIT",
    "type": "project",
    "description": "Symfony DDD messenger",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "replace": {
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "require": {
        "php": ">=8.2",
        "ext-pdo_sqlite": "*",
        "doctrine/dbal": "^4.0",
        "doctrine/doctrine-bundle": "^2.11",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.0",
        "league/commonmark": "^2.1",
        "symfony/console": "^7",
        "symfony/dotenv": "^7",
        "symfony/expression-language": "^7",
        "symfony/flex": "^2",
        "symfony/form": "^7",
        "symfony/framework-bundle": "^7",
        "symfony/html-sanitizer": "^7",
        "symfony/http-client": "^7",
        "symfony/intl": "^7",
        "symfony/mailer": "^7",
        "symfony/monolog-bundle": "^3.7",
        "symfony/polyfill-intl-messageformatter": "^1.12",
        "symfony/runtime": "^7",
        "symfony/security-bundle": "^7",
        "symfony/string": "^7",
        "symfony/translation": "^7",
        "symfony/twig-bundle": "7.3.*",
        "symfony/uid": "7.3.*",
        "symfony/validator": "^7",
        "symfony/yaml": "^7"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^8.0.2",
        "doctrine/doctrine-fixtures-bundle": "^3.5",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^11.3",
        "symfony/browser-kit": "^7",
        "symfony/debug-bundle": "^7",
        "symfony/maker-bundle": "^1.36",
        "symfony/stopwatch": "^7",
        "symfony/web-profiler-bundle": "^7"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "platform": {
            "php": "8.2.0"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "-r \"@rename('.env.local.demo', '.env.local');\"": "php-script",
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.3.*"
        }
    }
}
